<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

    <select id="idChack" resultType="int">
        SELECT count(*) from user where user_id = #{user_id}
    </select>

    <select id="nickNameChack" resultType="int">
        SELECT count(*) from user where user_id = #{nickname}
    </select>

    <select id="user.signup" resultType="int">
        insert user values (#{user_id}, #{email}, #{password}, #{contact},
        #{nickname}, #{parent_role}, #{birth_date}, #{family_code},
        NOW(), 0)
    </select>

</mapper>